{
    "$schema": "https://opencode.ai/config.json",
    "default_agent": "product-manager",
    "model": "zai-coding-plan/glm-4.7",
    "permission": {
      "external_directory": {
        "*": "ask"
      }
    },
    "mcp": {
      "nuxt": {
        "type": "remote",
        "url": "https://nuxt.com/mcp",
        "enabled": true
      },
      "nuxt-ui": {
        "type": "remote",
        "url": "https://ui.nuxt.com/mcp",
        "enabled": true
        },
        "playwriter": {
          "type": "local",
          "command": ["npx", "playwriter"],
          "enabled": true
        }
    },
    // Disable playwriter tool globally to enable on individual agents
    "tools": {
      "playwriter*": false
    }
  }
  