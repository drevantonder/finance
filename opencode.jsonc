{
    "$schema": "https://opencode.ai/config.json",
    "default_agent": "project-manager",
    "model":  "opencode/glm-4.7-free",
    "mcp": {
      "nuxt": {
        "type": "remote",
        "url": "https://nuxt.com/mcp",
        "enabled": true
      },
      "nuxt-ui": {
        "type": "remote",
        "url": "https://ui.nuxt.com/mcp",
        "enabled": true
        },
        "playwriter": {
          "type": "local",
          "command": ["npx", "playwriter"],
          "enabled": true
        }
    },
    // Disable playwriter tool globally to enable on individual agents
    "tools": {
      "playwriter*": false
    }
  }
  