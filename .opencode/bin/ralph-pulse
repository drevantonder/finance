#!/bin/bash
# Ralph pulse â€” full dashboard with issues + worktrees
# Usage: ./ralph-pulse

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "=== GitHub Issues ==="
gh issue list --json number,title,labels,createdAt --jq '.[] | "\(.number)\t\(.labels[0].name // "-")\t\(.title)"' 2>/dev/null
echo ""

echo "=== Ralph Worktrees ==="
"$SCRIPT_DIR/ralph-status"
echo ""

echo "=== Task Details ==="
"$SCRIPT_DIR/ralph-details"
